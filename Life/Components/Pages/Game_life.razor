@page "/Life"
@rendermode InteractiveServer

<h1>Boolean Matrix Grid</h1>

@if (initialized)
{
    <table class="grid-table">
        @for (int row = 0; row < rows; row++)
        {
            <tr>
                @for (int col = 0; col < cols; col++)
                {
                    int currentRow = row;
                    int currentCol = col;
                    <td>
                        <button class="grid-cell"
                                style="@GetCellStyle(currentRow, currentCol)"
                                @onclick="@(() => ToggleValue(currentRow, currentCol))">
                        </button>
                    </td>
                }
            </tr>
        }
    </table>
}
else
{
    <p>Loading grid...</p>
}

